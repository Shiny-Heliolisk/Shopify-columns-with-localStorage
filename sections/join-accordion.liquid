<style>
    .accordion {
      background-color: #eee;
      color: #444;
      cursor: pointer;
      padding: 18px;
      width: 100%;
      border: none;
      text-align: left;
      outline: none;
      font-size: 15px;
      transition: 0.4s;
    }
    
    i{
        font-size: 24px;
        float: right;
    }

    .active, .accordion:hover {
      background-color: #ccc; 
    }
    
    .panel {
      padding: 0 18px;
      display: none;
      background-color: white;
      overflow: hidden;
    }
    </style>
    
<div class="accordion-container">
    {% for block in section.blocks %}
    <button class="accordion">{{ block.settings.accordion_section }}<i class="fas fa-plus"></i></button>
    <div class="panel">
        <p>{{ block.settings.content }}</p>
    </div>
    {% endfor %}
</div>

{% schema %}
{
   "presets": [
       {
           "name":"Accordion"
       }
   ],
  "blocks":[
       {
          "type": "block",
          "name": "Sections",
         "settings": [
             {
                "type": "text",
                "id":"accordion_section",
                "label":"Accordion section"
             },
             {
                "type": "text",
                "id":"content",
                "label":"content"
             }
         ]
       }
  ]
}
{% endschema %}
