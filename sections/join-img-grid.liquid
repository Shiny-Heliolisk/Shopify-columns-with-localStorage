<style>
    .image-grid{
        display: flex;
        flex-wrap: wrap;
        width: 80%;
        margin-left: auto;
        margin-right: auto;
    }
    .pike-image-element{
        position: relative;
        width: 33.33%;
    }
    .pike-image-element>img{
        width: 100%;
        height: 100%;
    }

    .margin-center{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        text-align: center;
    }
    .pike-subtitle{
        color: white;
        margin: 0;
        font-size: 24px;
    }
    .pike-title{
        color: white;
        font-size: 30px;
        font-weight: bold;
    }
</style>
<div class="image-grid">
    {% for block in section.blocks %}
        
    <div class="pike-image-element">
        <img src="{{ block.settings.image_in_grid | img_url: 'master' }}"
          alt="{{ block.settings.image_in_grid.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image_in_grid.width }}"
          height="{{ block.settings.image_in_grid.height }}">
          <div class="margin-center">
            <div class="pike-subtitle">{{ block.settings.subtitle }}</div>
            <div class="pike-title">{{ block.settings.title }}</div>
          </div>
    </div>

    {% endfor %}
</div>

{% schema %}
{
   "presets": [
       {
           "name":"Image Grid"
       }
   ],
   "blocks":[
       {
          "name": "image in grid",
         "type": "image_picker",
        "settings": [
            {
               "type": "image_picker",
               "id":"image_in_grid",
               "label":"Image in grid"
            },
            {
               "type": "text",
               "id":"subtitle",
               "label":"sub title"
            },
            {
               "type": "text",
               "id":"title",
               "label":"title"
            }
        ]
       }
   ]
}
{% endschema %}