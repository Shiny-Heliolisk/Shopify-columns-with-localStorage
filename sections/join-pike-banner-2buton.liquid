<style>
   .pike-container{
      position: relative;
   }
   .pike-container>img{
      width: 100%;
      height: 100%;
   }
   .pike-container-content{
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      text-align: center;
      font-family: Arial, Helvetica, sans-serif;
      color: white;
   }
   h1{
      color: white;
   }
   a{
      padding: 20px 30px;
      text-decoration: none;
      font-family: Arial, Helvetica, sans-serif;
   }
   .buttons-pike>a:first-child{
      color: black;
      background-color: #fff;
      border: solid 2px white;   
   }
   .pike-second-button{
      color: white;
      border: solid 2px white;
   }
</style>
<div class="pike-container">
    <img src="{{ section.settings.banner_img | img_url: 'master' }}"
          alt="{{ section.settings.banner_img.alt | escape }}"
          loading="lazy"
          width="{{ section.settings.banner_img.width }}"
          height="{{ section.settings.banner_img.height }}">
    <div class="pike-container-content">
        {% for block in section.blocks %}
        <h1>{{ block.settings.title }}</h1>
        <p>{{ block.settings.desc }}</p>
        {% endfor %}
             
        <div class="buttons-pike">
         {% for block in section.blocks %}
            {% case block.type %}
               {% when "button" %}
                  <a class="pike-button" href="#">{{ block.settings.button }}</a>
            {% endcase %}  
         {% endfor %}
        </div>
        
    </div>
</div>

{% schema %}
{
   "presets": [
       {
           "name":"Pike banner with 2 buttons"
       }
   ],
   "settings": [
      {
         "type": "image_picker",
         "id": "banner_img",
         "label": "banner image"
      }
   ],
   "blocks":[
      {
         "name": "title",
         "type": "block",
         "settings": [
           {
              "type": "text",
              "id":"title",
              "label":"title"
           }
         ]
      },
      {
         "name": "description",
         "type": "text",
         "settings": [
           {
              "type": "text",
              "id":"desc",
              "label":"description"
           }
         ]
      },
      {
         "name": "buttons",
         "type": "button",
         "settings": [
           {
              "type": "text",
              "id":"button",
              "label":"button"
           }
         ]
      }
   ]
}
{% endschema %}
